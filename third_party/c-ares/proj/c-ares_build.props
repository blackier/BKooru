<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <LibSrcPath>$(ProjectDir)..\src\</LibSrcPath>
    <LibIncludePath>$(ProjectDir)..\include\</LibIncludePath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions Condition="'$(Configuration)'=='Debug'">CARES_BUILDING_LIBRARY;DEBUGBUILD;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <PreprocessorDefinitions Condition="'$(Configuration)'=='Release'">CARES_BUILDING_LIBRARY;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <AdditionalIncludeDirectories>$(LibSrcPath)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link>
      <AdditionalDependencies>ws2_32.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
    <PostBuildEvent>
      <Command>xcopy "$(LibSrcPath)ares.h" "$(LibIncludePath)c-ares\" /Y /C /Q /R /D
xcopy "$(LibSrcPath)ares_build.h" "$(LibIncludePath)c-ares\" /Y /C /Q /R /D
xcopy "$(LibSrcPath)ares_rules.h" "$(LibIncludePath)c-ares\" /Y /C /Q /R /D
xcopy "$(LibSrcPath)ares_version.h" "$(LibIncludePath)c-ares\" /Y /C /Q /R /D</Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="LibSrcPath">
      <Value>$(LibSrcPath)</Value>
    </BuildMacro>
    <BuildMacro Include="LibIncludePath">
      <Value>$(LibIncludePath)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>